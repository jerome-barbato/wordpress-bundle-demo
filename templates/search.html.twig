{% extends 'layout.html.twig' %}

{#
 # The template for displaying search results pages
 #
 # @link https://developer.wordpress.org/themes/basics/template-hierarchy/#search-result
 #
 # @package WordPress
 # @subpackage Twenty_Nineteen
 # @since 1.0.0
 #}
{% block body %}

<section id="primary" class="content-area">
	<main id="main" class="site-main">

		{% if posts|length %}

			<header class="page-header">
				<h1 class="page-title">
					{{ _e( 'Search results for:', 'twentynineteen' ) }}
				</h1>
				<div class="page-description">{{ search_query }} </div>
			</header><!-- .page-header -->

			{% for post in posts %}

				{#
				 # Include the Post-Format-specific template for the content.
				 # If you want to override this in a child theme, then include a file
				 # called content-___.html.twig (where ___ is the Post Format name) and that will be used instead.
				 #}
				{% include 'template-parts/content/content-excerpt.html.twig' %}

			{% endfor %}

			{# Previous/next page navigation. #}
			{% include 'template-parts/content/content-pagination.html.twig' %}


		{# If no content, include the "No posts found" template. #}
		{% else %}
			{% include 'template-parts/content/content-none.html.twig' %}

		{% endif %}
	</main><!-- #main -->
</section><!-- #primary -->

{% endblock %}

